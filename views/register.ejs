<% include ./partials/header.ejs%>

<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div
    class="w-[25vw] h-[68vh] bg-white px-20 py-10 rounded-[30px] justify-center"
  >
    <div
      class="w-10 h-10 m-auto bg-center bg-cover bg-[url(https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png)]"
    ></div>
    <h1
      class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter leading-non bold"
    >
      Create New Account
    </h1>
    <form action="/register", method="post" enctype="application/x-www-form-urlencoded">
      <h3 class="pl-2 mt-4">Username</h3>
      <input
        class="block border-2 w-full py-2 px-3 mt-1 rounded-xl"
        type="text"
        name="username"
        placeholder="Create a username"
      />
      <h3 class="pl-2 mt-4">Email</h3>
      <input
        class="block border-2 w-full py-2 px-3 mt-1 rounded-xl"
        type="text"
        name="email"
        placeholder="email Id"
      />
      <h3 class="pl-2 mt-4">Password</h3>

      <input
        class="block border-2 w-full py-2 px-3 mt-1 rounded-xl"
        type="cPassword"
        name="cPassword"
        placeholder="Create a password"
      />
      <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#"
        >Forget Password</a
      >
      <input
        class="block border-2 w-full py-2 px-3 mt-2 bg-red-600 text-white rounded-full"
        type="Submit"
        value="Register"
      />
    </form>
    <a
      class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full"
      href="/"
      >Already a member? Log in</a
    >
  </div>
</div>

<% include ./partials/footer.ejs%>
