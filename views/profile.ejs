<% include ./partials/header.ejs%>

<div class="profile w-full min-h-screen bg-zinc-500 text-white pt-1">
  <div class="profdets flex flex-col items-center mt-20">
    <div class="relative">
      <span class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center">
        <i class="ri-pencil-fill"></i>
      </span>

      <div class="w-40 h-40 bg-zinc-300 rounded-full overflow-hidden">
        <img
        class="w-full h-full object-cover"
        src="https://pbs.twimg.com/profile_images/1439953850471911426/s4pE9SYa_400x400.jpg"
        alt=""
        />
      </div>
    </div>
    <h1 class="text-3xl font-semibold mt-5">Sahil Moktan</h1>
    <h3 class="text-md">@username</h3>
    <a
      href="/edit"
      class="px-10 py-3 bg-zinc-700 rounded-full text-xs font-semibold mt-5"
      >Edit</a
    >
    <button
      class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-10"
    >
      Add New Post
    </button>
  </div>
  <div class="cards flex flex-wrap justify-left gap-10 px-10 mt-10">
    <div class="card">
      <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
        <img
          class="w-full h-full object-cover"
          src="https://upload.wikimedia.org/wikipedia/commons/5/52/Spider-Man.jpg"
          alt=""
        />
      </div>
      <h3 class="text-xl font-semibold mt-3">All Pins</h3>
      <h5 class="text-sm font-medium opacity-60">28 pins</h5>
    </div>
  </div>
</div>

